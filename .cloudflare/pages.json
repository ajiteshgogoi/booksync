{
  "buildConfig": {
    "buildCommand": "chmod +x build.sh && ./build.sh",
    "outputDirectory": "client/dist",
    "nodeVersion": "18"
  },
  "deploymentConfigs": {
    "pages": {
      "routes": [
        { 
          "pattern": "/api/*", 
          "zone": "api" 
        },
        {
          "pattern": "/*",
          "serve": "/index.html",
          "staticPageHeaders": {
            "Cache-Control": "no-cache, no-store, must-revalidate"
          }
        }
      ],
      "functionsDirectory": "functions"
    }
  }
}