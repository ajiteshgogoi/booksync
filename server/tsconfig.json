{
  "compilerOptions": {
    "target": "es2017",
    "module": "node16",
    "moduleResolution": "node16",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "cors",
      "multer"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
