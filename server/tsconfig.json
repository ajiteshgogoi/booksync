{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "cors",
      "multer",
      "next"
    ],
    "outDir": "./build",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "../shared/src/**/*",
    "../workers/src/**/*"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../shared" },
    { "path": "../workers" }
  ]
}
