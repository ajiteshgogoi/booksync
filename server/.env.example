# Notion OAuth Configuration
NOTION_OAUTH_CLIENT_ID=your_client_id_here
NOTION_OAUTH_CLIENT_SECRET=your_client_secret_here
NOTION_REDIRECT_URI=http://localhost:3001/auth/notion/callback

# Server Configuration
PORT=3001
CLIENT_URL=http://localhost:5173

# R2 Configuration
R2_ENDPOINT=your_r2_endpoint_here
R2_ACCESS_KEY_ID=your_r2_access_key_here
R2_SECRET_ACCESS_KEY=your_r2_secret_key_here
R2_BUCKET_NAME=your_bucket_name_here

# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=your_upstash_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Cron Job Configuration
# CRON_SECRET is only required for Vercel production deployment
# For local development, the worker runs automatically every 30 seconds
# CRON_SECRET=your_cron_secret_here
