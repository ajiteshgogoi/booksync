{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "lib": [
      "ES2021",
      "WebWorker",
      "DOM",
      "DOM.Iterable"
    ],
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}