{
  "builds": [
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.ts"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "dist/assets/$1"
    },
    {
      "src": "^/(?!api/?.*$).*",
      "dest": "dist/index.html"
    }
  ]
}
